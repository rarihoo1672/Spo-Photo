<div class="acount-container">
  <div class="acount-container__box">
    <h2 class="acount-container__box__text">アカウント登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error-messages", resource: resource %>
      <div class="form-box">
        <div class="acount-field">
          <%= f.label :nickname, class: "acount-field__label" %><br />
          <%= f.text_field :nickname, class: "acount-field__form", placeholder: "12文字以内です",  maxlength: 12, autofocus: true, autocomplete: "nickname" %>
        </div>

        <div class="acount-field">
          <%= f.label :email, class: "acount-field__label" %><br />
          <%= f.email_field :email, class: "acount-field__form", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="acount-field">
          <%= f.label :password, class: "acount-field__label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class: "acount-field__form", autocomplete: "new-password" %>
        </div>

        <div class="acount-field acount-field--bottom">
          <%= f.label :password_confirmation, class: "acount-field__label" %><br />
          <%= f.password_field :password_confirmation, class: "acount-field__form", autocomplete: "new-password" %>
        </div>

        <div class="acount-actions">
          <%= f.submit "新規登録", class: "acount-actions__btn"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<footer></footer>