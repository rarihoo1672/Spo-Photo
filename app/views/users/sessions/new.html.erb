<div class="acount-container">
  <div class="acount-container__box">
    <h2 class="acount-container__box__text">ログイン</h2>
    <% if flash[:alert] %>
      <%= render "shared/flash-messages" %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-box">
        <div class="acount-field">
          <%= f.label :email, class: "acount-field__label" %><br />
          <%= f.email_field :email, class: "acount-field__form", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="acount-field">
          <%= f.label :password, class: "acount-field__label" %><br />
          <%= f.password_field :password, class: "acount-field__form acount-field__form--bottom", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="acount-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="acount-actions">
          <%= f.submit "ログイン", class: "acount-actions__btn"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
